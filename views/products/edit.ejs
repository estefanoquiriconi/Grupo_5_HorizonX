<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit</title>
    <link rel="stylesheet" href="/css/create.css">
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<body>
    <%- include('../partials/header.ejs') %>
    <div class="form-container">
        <form action="/products/edit/<%=product.id %>?_method=PUT" method="post" enctype="multipart/form-data">
          <h2>Editar Producto</h2>
          <hr>
          <div class="primera-linea">
            <div class="primer-div">
              <label for="name">Nombre:</label>
              <input
              type="text"
              id="name"
              name="name"
              class="input-field"
              value="<%= product.name %>"
              />
              <% if (locals.errors && errors.name) { %>
                <p class="error"><%= errors.name.msg %></p>
                <% } %>
            </div>
            <div class="primer-div">
              <label for="brand">Marca:</label>
              <select name="brand" id="brand" class="input-field">
                <option value="" selected disabled>Selecciona una marca</option>
                <% brands.forEach(brand => { %>
                  <option value="<%= brand.id %>" <%= product.brand_id == brand.id ? 'selected' : null %>> <%= brand.name %></option>
                <% }) %>
              </select>
              <% if (locals.errors && errors.brand) { %>
                <p class="error"><%= errors.brand.msg %></p>
                <% } %>
            </div>
            </div>
            <div class="primera-linea">
              <div class="primer-div">
                <label for="color">Color:</label>
                <select name="color" id="color" class="input-field">
                  <option value="" selected disabled>Selecciona un color</option>
                  <% colors.forEach(color => { %>
                    <option value="<%= color.id %>" <%= product.color_id == color.id ? 'selected' : null %>> <%= color.name %></option>
                  <% }) %>
                </select>
                <% if (locals.errors && errors.color) { %>
                  <p class="error"><%= errors.color.msg %></p>
                  <% } %>
              </div>
              <div class="primer-div">
                <label for="price">Precio:</label>
                <input
                type="number"
                id="price"
                name="price"
                class="input-field"
                step="0.01"
                min="1"
                value="<%= product.price %>"
                />
                <% if (locals.errors && errors.price) { %>
                  <p class="error"><%= errors.price.msg %></p>
                  <% } %>
              </div>
            </div>
              
            <div class="primera-linea">
              <div class="primer-div">
                <label for="category">Caregoría:</label>
                <select name="category" id="category" class="input-field">
                  <option value="" selected disabled>Selecciona una categoría</option>
                  <% categories.forEach(category => { %>
                    <option value="<%= category.id %>" <%= product.category_id == category.id ? 'selected' : null %>> <%= category.name %></option>
                  <% }) %>
                </select>
                <% if (locals.errors && errors.category) { %>
                  <p class="error"><%= errors.category.msg %></p>
                  <% } %>
              </div>
              <div class="primer-div">
                <label for="stock_quantity">Cantidad de stock:</label>
                <input type="number" id="stock_quantity" name="stock_quantity" class="input-field" value="<%= product.stock_quantity ? product.stock_quantity : null %>"  />
                <% if (locals.errors && errors.stock_quantity) { %>
                  <p class="error"><%= errors.stock_quantity.msg %></p>
                  <% } %>
              </div>
            </div>
          <label for="description">Descripción:</label>
          <textarea
            id="description"
            name="description"
            class="input-field"
            rows="4"
          ><%= product.description %></textarea>
          <% if (locals.errors && errors.description) { %>
            <p class="error"><%= errors.description.msg %></p>
            <% } %>

            <label for="image">Imagenes:</label>
            <input
              class="insert-img"
              type="file"
              id="image"
              name="images"
              multiple
            />
          <input type="text" name="id" hidden value="<%= product.id %>">
  
          <div class="button-ubicacion">
            <button type="submit">Guardar</button>
          </div>
        </form>
        <a href="/products" class="button-ubicacion">
          <button type="submit">Volver</button>
        </a>
      </div>
    <%- include('../partials/footer.ejs') %>
</body>
</html>