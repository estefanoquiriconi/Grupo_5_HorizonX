<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs', {title: 'Detalle', styles:
  '/css/productDetail.css'}) %>
  <body>
    <%- include('../partials/header.ejs') %>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />
    <main class="container">
      <section class="product-section">
        <div class="product">
          <div class="product-details">
            <div class="swiper mySwiper">
              <div class="swiper-wrapper">
                <% product.images.forEach(image => { %>
                <div class="swiper-slide">
                  <img
                    src="/images/products/<%= image.image_filename %>"
                    alt="<%= product.name %>"
                  />
                </div>
                <% }) %>
              </div>
              <div class="swiper-pagination"></div>
            </div>
            <div>
              <h2><%=product.brand.name +' '+ product.name %></h2>
              <p><%= product.description %></p>
              <div class="price-pay">
                <div class="price-pay2">
                  <div class="form-pay">
                    <h3>Todas las formas de pago</h3>
                    <div class="form-pay2">
                      <div class="target">
                        <img
                          src="https://armoto.vtexassets.com/arquivos/cabal26.png"
                          alt="Cabal"
                          class="target-form2"
                          crossorigin="anonymous"
                        />
                      </div>
                      <div class="target">
                        <img
                          src="https://armoto.vtexassets.com/arquivos/visa26.png"
                          alt="Visa"
                          class="target-form1"
                          crossorigin="anonymous"
                        />
                      </div>
                      <div class="target">
                        <img
                          src="https://armoto.vtexassets.com/arquivos/mastercard26.png"
                          alt="MasterCard"
                          class="target-form1"
                          crossorigin="anonymous"
                        />
                      </div>
                      <div class="target">
                        <img
                          src="https://armoto.vtexassets.com/arquivos/american-express26.png"
                          alt="Cabal"
                          class="target-form2"
                          crossorigin="anonymous"
                        />
                      </div>
                      <div class="target">
                        <img
                          src="https://armoto.vtexassets.com/arquivos/cash-icon-checkout.svg"
                          alt="Cabal"
                          class="target-form1"
                          crossorigin="anonymous"
                        />
                      </div>
                      <div class="target">
                        <img
                          src="https://armoto.vtexassets.com/arquivos/ico-mercadopago.png"
                          alt="Cabal"
                          class="target-form1"
                          crossorigin="anonymous"
                        />
                      </div>
                      <div class="target">
                        <img
                          src="https://armoto.vtexassets.com/arquivos/modo.png"
                          alt="Cabal"
                          class="target-form1"
                          crossorigin="anonymous"
                        />
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div>
                <div class="options-color">
                  <p class="p-div">Color: <%= product.color.name %></p>
                  <span class="product-color"></span>
                </div>
              </div>
              <p class="price">$<%= Number(product.price).toLocaleString('es-AR', { minimumFractionDigits: 2 }) %></p>
              <form
                action="/cart/add/<%= product.id %>"
                method="POST"
                style="display: inline-flex"
              >
                <button type="submit" class="buy-button">
                  Agregar al carrito
                </button>
              </form>
              <% if (locals.isLogged && locals.userLogged.role ==
              'administrador') { %>
              <a href="/products/edit/<%= product.id %>" class="buy-button"
                >Editar</a
              >
              <form
                action="/products/delete/<%= product.id %>?_method=DELETE"
                method="POST"
                style="display: inline-flex"
                enctype="multipart/form-data"
              >
                <button type="submit" class="buy-button">Eliminar</button>
              </form>
              <% } %>
            </div>
          </div>
        </div>
      </section>
    </main>
    <%- include('../partials/footer.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script>
      var swiper = new Swiper(".mySwiper", {
        pagination: {
          el: ".swiper-pagination",
          dynamicBullets: true,
        },
      });
      //Color del producto
      document.querySelector(".product-color").style.backgroundColor =
        "<%=product.color.cod_hex%>";
    </script>
  </body>
</html>