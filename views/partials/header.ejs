<header class="main-header">
  <div class="main-header-top-bar">
    <a href="/"
      ><img class="main-header-logo" src="/images/2logo.png" alt="Logo"
    /></a>
    <form action="/products/search" method="get" >
      <input class="input-search" name="q" type="text" placeholder="Buscar..." />
    </form>
    <ul class="navbar-top">
      <% if (locals.isLogged && locals.userLogged.role == 'administrador') { %>
      <li><a href="/products">Administrar</a></li>
      <% }else { %>
      <li><a href="/products">Todos</a></li>
      <% } %>
      <li><a href="/products?cat=Celular">Smartphones</a></li>
      <li><a href="/products?cat=Accesorio">Accesorios</a></li>
      <li><a href="/products?cat=Tablets">Tablets</a></li>
      <li><a href="/products?cat=Computadoras">Computadoras</a></li>
      <li>
        <a href="/users/login"><i class="fa-solid fa-user"></i> Cuenta</a>
      </li>
      <% if (locals.isLogged) { %>
      <li>
        <a href="/cart"><i class="fa-solid fa-cart-shopping"></i> Carrito</a>
      </li>
      <% } %>
    </ul>
    <ul class="navbar-bottom">
      <li>
        <a href="/users/login"><i class="fa-solid fa-user"></i></a>
      </li>
      <li>
        <a href="/cart"><i class="fa-solid fa-cart-shopping"></i></a>
      </li>
      <li>
        <a href="#"><i class="fa-solid fa-bars"></i></a>
      </li>
    </ul>
  </div>
</header>